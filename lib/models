class VideoTemplate {
  final String name;
  final String subtitle;
  final String subtitlePosition;
  final String subtitleAnimation;
  final String ttsStyle;
  final String defaultBackground;
  final String defaultMusic;
  final String videoStyle;

  const VideoTemplate({
    required this.name,
    required this.subtitle,
    required this.subtitlePosition,
    required this.subtitleAnimation,
    required this.ttsStyle,
    required this.defaultBackground,
    required this.defaultMusic,
    required this.videoStyle,
  });
}

